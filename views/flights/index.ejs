<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/index.css" />
  <%- include('../partials/nav') %>
    <main>
      <h1>Flight List</h1>
      <table id="list">
        <thead>
          <tr>
            <th>Airline</th>
            <th>FlightNo</th>
            <th>Departs</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          
          <% flights.forEach(flight=> { %>
            
            <tr class="<%= flight.departs < new Date() ? "expiredRow" : "activeRow" %>">
              <td>
                <%= flight.airline %>
              </td>
              <td><a href="/flights/<%= flight._id %>">
                  <%= flight.flightNo %>
                </a></td>
                <td>
                  <%= flight.departs %>
                </td>
              <td>
                <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              </td>
            </tr>
            <% }) %>
            
        </tbody>
      </table>
     
    </main>
    <%- include('../partials/footer') %>